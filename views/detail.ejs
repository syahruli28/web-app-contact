<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Kontak</h2>
            <% if (!contact) { %>
                <div class="alert alert-warning fw-bold" role="alert">
                    Data kontak tidak ditemukan, <a href="/contact" class="alert-link fw-normal">kembali</a>
                </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %> </h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/delete/<%= contact.nama %>" onclick="return confirm('yakin?');" class="btn btn-danger badge">hapus</a>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">ubah</a>
                  <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
                </div>
            </div>
            <% } %> 
        </div>
    </div>
</div>